			case 9: professionOne = "Vigilante"; break;
			case 10: professionOne = "Brawler"; break;
			case 11: professionOne = "Hunter"; break;
			case 12: professionOne = ""; break;
			case 13: professionOne = ""; break;
			case 14: professionOne = ""; break;
			case 15: professionOne = ""; break;
			}
		}
		
		if(professionGroup == "Magical"){
			randomNumber = 1 + (int) (Math.random() * 10);
			switch(randomNumber){
			case 1: professionOne = "Bard"; break;
			case 2: professionOne = "Cleric"; break;
			case 3: professionOne = "Druid"; break;
			case 4: professionOne = "Paladin"; break;
			case 5: professionOne = "Sorcerer"; break;
			case 6: professionOne = "Wizard"; break;
			case 7: professionOne = "Alchemist"; break;
			case 8: professionOne = "Magus"; break;
			case 9: professionOne = "Oracle"; break;
			case 10: professionOne = "Witch"; break;
			case 11: professionOne = ""; break;
			case 12: professionOne = ""; break;
			case 13: professionOne = ""; break;
			case 14: professionOne = ""; break;
			case 15: professionOne = ""; break;
			}
		}
		
		if(professionGroup == "Specialized"){
			randomNumber = 1 + (int) (Math.random() * 13);
			switch(randomNumber){
			case 1: professionOne = "Arcanist"; break;
			case 2: professionOne = "Bloodrager"; break;
			case 3: professionOne = "Shaman"; break;
			case 4: professionOne = "Skald"; break;
			case 5: professionOne = "Slayer"; break;
			case 6: professionOne = "Swashbuckler"; break;
