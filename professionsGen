			case 39: professionOne = "Fortune-Teller"; break;
			case 40: professionOne = "Furrier"; break;
			case 41: professionOne = "Jeweler"; break;
			case 42: professionOne = "Limner"; break;
			case 43: professionOne = "Lumberjack"; break;
			case 44: professionOne = "Navigator"; break;
			case 45: professionOne = "Pardoner"; break;
			case 46: professionOne = "Potter"; break;
			case 47: professionOne = "Seamstress"; break;
			case 48: professionOne = "Stonemason"; break;
			case 49: professionOne = "Tailor"; break;
			case 50: professionOne = "Weaver"; break;
			case 51: professionOne = "Translator"; break;
			case 52: professionOne = "Mercenary"; break;
			case 53: professionOne = "Guard"; break;
			case 54: professionOne = ""; break;
			case 55: professionOne = ""; break;
			case 56: professionOne = ""; break;
			case 57: professionOne = ""; break;
			case 58: professionOne = ""; break;
			}
		}
		
	}

}
