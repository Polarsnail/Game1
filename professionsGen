			case 9: professionOne = "Vampire Hunter"; break;
			case 10: professionOne = "Summoner"; break;
			case 11: professionOne = "Antipaladin"; break;
			case 12: professionOne = "Ninja"; break;
			case 13: professionOne = "Samurai"; break;
			case 14: professionOne = ""; break;
			case 15: professionOne = ""; break;
			}
		}
		
		if(professionGroup == "Generic"){
			randomNumber = 1 + (int) (Math.random() * 53);
			switch(randomNumber){
			case 1: professionOne = "Architect"; break;
			case 2: professionOne = "Baker"; break;
			case 3: professionOne = "Barrister"; break;
			case 4: professionOne = "Brewer"; break;
			case 5: professionOne = "Butcher"; break;
			case 6: professionOne = "Clerk"; break;
			case 7: professionOne = "Cook"; break;
			case 8: professionOne = "Courtesan"; break;
			case 9: professionOne = "Driver"; break;
			case 10: professionOne = "Engineer"; break;
			case 11: professionOne = "Farmer"; break;
			case 12: professionOne = "Fisherman"; break;
			case 13: professionOne = "Gambler"; break;
			case 14: professionOne = "Gardener"; break;
			case 15: professionOne = "Herbalist"; break;
			case 16: professionOne = "Innkeeper"; break;
			case 17: professionOne = "Librarian"; break;
			case 18: professionOne = "Merchant"; break;
			case 19: professionOne = "Midwife"; break;
			case 20: professionOne = "Miller"; break;
			case 21: professionOne = "Miner"; break;
			case 22: professionOne = "Porter"; break;
			case 23: professionOne = "Sailor"; break;
			case 24: professionOne = "Scribe"; break;
			case 25: professionOne = "Shepherd"; break;
			case 26: professionOne = "Stable master"; break;
			case 27: professionOne = "Soldier"; break;
			case 28: professionOne = "Tanner"; break;
			case 29: professionOne = "Trapper"; break;
			case 30: professionOne = "Woodcutter"; break;
			case 31: professionOne = "Begger"; break;
			case 32: professionOne = "Boat Pilot"; break;
			case 33: professionOne = "Boatwright"; break;
			case 34: professionOne = "Carpenter"; break;
			case 35: professionOne = "Cartographer"; break;
