package Adverbs;

public class professionsGen {
	public static String professionOne = "error";
	static void getProfession(){
		String professionGroup = "";
		int randomNumber = 0;
		
		randomNumber = 1 + (int) (Math.random() * 5);
		
		switch(randomNumber){
		case 1: professionGroup = "Fighting"; break;
		case 2: professionGroup = "Magical"; break;
		case 3: professionGroup = "Specialized"; break;
		case 4: professionGroup = "Generic"; break;
		case 5: professionGroup = "Noble"; break;
		}
		
		
		if(professionGroup == "Fighting"){
			randomNumber = 1 + (int) (Math.random() * 11);
			switch(randomNumber){
			case 1: professionOne = "Barbarian"; break;
			case 2: professionOne = "Fighter"; break;
			case 3: professionOne = "Monk"; break;
			case 4: professionOne = "Ranger"; break;
