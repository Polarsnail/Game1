
public class Sword_Generator {
	
	static void getSword() {

		// The Hobo of Power's Weapon Generator 2.0

		int swordTypePicker = 1 + (int) (Math.random() * 5);
		String swordType = null;
		String swordTier = null;


		// Selecting a sword type

		switch (swordTypePicker) {
		case 1: swordType = "Falchion";       break;
		case 2: swordType = "Rapier";         break;
		case 3: swordType = "Broadsword";     break;
		case 4: swordType = "Shortsword";     break;
		case 5: swordType = "Sword Gauntlet"; break;
		}
		
                // Getting prefix, attack & enchantment
		Prefix_Generator.getPrefix();
		Enchantment_Generator.getEnchantment();
		
		// Calculating sword tier & rarity

		if (Prefix_Generator.Damage <= 60) { 
			swordTier = "Copper";
		} else if (Prefix_Generator.Damage <= 70)  { 
			swordTier = "Bronze";
		} else if (Prefix_Generator.Damage <= 80)  {
			swordTier = "Iron";
		} else if (Prefix_Generator.Damage <= 90)  {
			swordTier = "Steel";
		} else if (Prefix_Generator.Damage <= 100) {
			swordTier = "Mithril";
		}
		

		
		

		// Console item information
		System.out.println("Sword: " + Prefix_Generator.prefixPicked + " " + swordTier + " " + swordType);
		System.out.println("Damage: " + Prefix_Generator.Damage);
		System.out.println("Enchantment: " + Enchantment_Generator.enchantmentPicked);
	}
}
